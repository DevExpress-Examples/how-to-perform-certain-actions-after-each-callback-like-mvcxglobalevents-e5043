<script>
    function CustomRequest() {
        $.ajax({
            url: '@Url.Action("TestPartial", "Home")',
        type: "GET",
        success: function (data) {
            $('#ajaxDiv').html(data);
        },
        error: function (xhr, textStatus, errorThrown) {
            alert('Request Status: ' + xhr.status + '; Status Text: ' + textStatus + '; Error: ' + errorThrown);
        }
    });
}
</script>
